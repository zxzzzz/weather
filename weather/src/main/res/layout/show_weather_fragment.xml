<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipe_refresh">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:orientation="vertical"
            android:alpha="120"

            android:id="@+id/backLayout"
            android:background="@drawable/rain3">
        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:id="@+id/backImage"/>-->
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/city" />-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAppearance="@android:style/TextAppearance.Material"

            android:textSize="45sp"
            android:text="14"
            android:id="@+id/tmp" />
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/fl"/>-->
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/txt"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小雨"
            android:textAppearance="@android:style/TextAppearance.Material"

            android:id="@+id/txt"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/tmp"
            android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="。"
                android:id="@+id/m"
                android:textSize="34sp"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:layout_marginTop="180dp"
                android:layout_toRightOf="@+id/tmp" />
            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/suggest"-->
                <!--android:text="记得保暖哦"-->
                <!--android:textSize="24sp"-->
                <!--android:layout_marginTop="76dp"-->
                <!--android:layout_below="@+id/tmp"-->
                <!--android:layout_alignLeft="@+id/tmp" />-->
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp">
            <TextView
                android:paddingTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天"
                android:id="@+id/oneDate"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:paddingEnd="8dp"
                android:textSize="16sp"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="1dp"
                android:layout_marginLeft="40dp"
                android:layout_height="16dp"
                android:paddingEnd="8dp"
                android:background="#50000000"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/oneState"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:textSize="14sp"
                android:layout_marginLeft="44dp" />
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="1dp"
                android:layout_marginLeft="48dp"
                android:layout_height="16dp"
                android:paddingEnd="8dp"
                android:background="#50000000"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13/18"
                android:textSize="14sp"
                android:layout_marginLeft="50dp"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:id="@+id/oneWeather" />



        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0e000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp">
            <TextView
                android:paddingTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明天"
                android:id="@+id/twoDate"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:paddingEnd="8dp"
                android:textSize="16sp"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="1dp"
                android:layout_marginLeft="40dp"
                android:layout_height="16dp"
                android:paddingEnd="8dp"
                android:background="#50000000"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/twoState"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:textSize="14sp"
                android:layout_marginLeft="44dp"
                android:text="xiayu" />
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:paddingEnd="8dp"
                android:layout_marginLeft="48dp"
                android:background="#50000000"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13/18"
                android:textSize="14sp"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:layout_marginLeft="50dp"
                android:id="@+id/twoWeather" />



        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0e000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp">
            <TextView
                android:paddingTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="后天"
                android:id="@+id/threeDate"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:paddingEnd="8dp"
                android:textSize="16sp"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="1dp"
                android:layout_marginLeft="40dp"
                android:layout_height="16dp"
                android:paddingEnd="8dp"
                android:background="#50000000"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/threeState"
                android:textAppearance="@android:style/TextAppearance.Material"
                android:textSize="14sp"
                android:layout_marginLeft="44dp"
                android:text="xiayu" />
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="1dp"
                android:layout_marginLeft="48dp"
                android:layout_height="16dp"
                android:paddingEnd="8dp"
                android:background="#50000000"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13/18"
                android:textSize="14sp"
                android:layout_marginLeft="50dp"
                android:textAppearance="@android:style/TextAppearance.Material"

                android:id="@+id/threeWeather" />



        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#20000000"/>
        <TextView
            android:id="@+id/hour24"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/Theme.Material"
            android:textSize="16sp"
            android:text="24小时天气预报"
            android:layout_marginLeft="16dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.github.mikephil.charting.charts.LineChart
                    android:layout_marginTop="16dp"
                    android:paddingTop="16dp"
                    android:layout_width="600dp"
                    android:layout_height="200dp"
                    android:id="@+id/line2">
                </com.github.mikephil.charting.charts.LineChart>
            </LinearLayout>
        </HorizontalScrollView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"

            android:background="#20000000"
            />
        <TextView
            android:id="@+id/dailyForcast"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/Theme.Material"
            android:textSize="16sp"
            android:text="七天天气预报"
            android:layout_marginLeft="16dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.github.mikephil.charting.charts.LineChart
                android:layout_marginTop="16dp"
                android:paddingTop="16dp"
                android:layout_width="600dp"
                android:layout_height="200dp"
                android:id="@+id/line1">
            </com.github.mikephil.charting.charts.LineChart>
        </LinearLayout>
        </HorizontalScrollView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"

            android:background="#20000000"
            />

        <TextView
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="出行建议"
            android:textAppearance="@android:style/Theme.Material"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"/>
        <ImageView
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20000000"/>
        <TextView
            android:textAppearance="@android:style/TextAppearance.Material"

            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/flud"
            android:text="预防感冒"
            android:textSize="14sp" />

        <ImageView
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20000000"/>
        <TextView
            android:layout_marginLeft="16dp"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/suggest1" />
        <ImageView
            android:layout_marginLeft="16dp"

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20000000"/>
        <TextView
            android:layout_marginLeft="16dp"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/suggest2" />
        <ImageView
            android:layout_marginLeft="16dp"

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20000000"/>
        <TextView
            android:layout_marginLeft="16dp"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/suggest3" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#20000000"/>
        <TextView
            android:layout_marginLeft="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运动建议"
            android:textAppearance="@android:style/Theme.Material"
            android:textSize="16sp"
            />
        <ImageView
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20000000"/>
        <TextView
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:id="@+id/sportSuggest" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#20000000"/>
        <TextView
            android:layout_marginLeft="16dp"

            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="驾车建议"
            android:textAppearance="@android:style/Theme.Material"
            android:textSize="16sp" />
        <ImageView
            android:layout_marginLeft="16dp"

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20000000"/>
        <TextView
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/driveSuggest"
            android:layout_marginLeft="16dp"
            android:textAppearance="@android:style/TextAppearance.Material"
            />
        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>